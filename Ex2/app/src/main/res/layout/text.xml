<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="25dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14b4ff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contact Number"
        android:layout_gravity="center_horizontal"
        android:textColor="#c4fdfff8"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/eContact" android:hint="Type emergency contact"
        android:textColorHint="#c4fdfff8"

        android:textIsSelectable="false"
        android:textColor="#ff000000"
        android:background="#fffafffb"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tvResults"
        android:layout_gravity="center_horizontal"
        android:textColor="#c4fdfff8"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="384dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="256dp" />

    <Button
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button3"
        android:background="#cac5c5c5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/eMessage"
        android:hint="Type emergency contact"
        android:textColorHint="#c4fdfff8"
        android:textIsSelectable="false"
        android:textColor="#ff000000"
        android:background="#fffafffb"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Optional: Custom message"
        android:layout_gravity="center_horizontal"
        android:textColor="#c4fdfff8"
        android:textSize="25dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/eContact"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Optional: Set Timer"
        android:layout_gravity="center_horizontal"
        android:textColor="#c4fdfff8"
        android:textSize="25dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/eMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/eTimer"
        android:hint="Type emergency contact"
        android:textColorHint="#c4fdfff8"
        android:textIsSelectable="false"
        android:textColor="#ff000000"
        android:background="#fffafffb"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>